{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "removeComments": true,
    "paths": {
      "@/*": [
        "./packages/*"
      ]
    },
  },
  "include": [
    "packages/*.ts",
    "packages/*.d.ts",
    "env.d.ts",
    "./node_modules/@my-plugins/vue-web/lib/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "src",
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}